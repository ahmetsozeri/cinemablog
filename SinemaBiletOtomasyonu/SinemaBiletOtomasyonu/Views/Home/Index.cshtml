<div class="row" style="margin:40px;">
    @foreach (var k in Model)
    {

        <div class="col-3">

            <div class="card" style="width: 18rem;">
                <img src="@k.Afis" height="150" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@k.FilmAdi</h5>
                    <p class="card-text">@k.KisaAciklama.Substring(0, 50)...</p>
                    <a href="/BiletDetay/Index/@k.FilmID" class="btn btn-dark">Bilet Al</a>
                </div>
            </div>
            <br />

        </div>
    }
</div>


